<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.pathfindertools.EquipmentManager">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/equipment_manager"
        android:id="@+id/text2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="head"
        android:id="@+id/head"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="neck"
        android:id="@+id/neck"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Chest"
        android:id="@+id/chest"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/neck"
        android:layout_alignStart="@+id/neck"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="main"
        android:id="@+id/main"
        android:layout_alignTop="@+id/chest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="offhand"
        android:id="@+id/offhand"
        android:layout_alignTop="@+id/chest"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="legs"
        android:id="@+id/legs"
        android:layout_below="@+id/chest"
        android:layout_alignLeft="@+id/chest"
        android:layout_alignStart="@+id/chest"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="feet"
        android:id="@+id/feet"
        android:layout_below="@+id/legs"
        android:layout_centerHorizontal="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="back"
        android:id="@+id/back"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 gp"
        android:id="@+id/money"
        android:layout_alignBottom="@+id/neck"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="ring2"
        android:id="@+id/ring2"
        android:layout_alignTop="@+id/feet"
        android:layout_alignLeft="@+id/offhand"
        android:layout_alignStart="@+id/offhand"
        android:textSize="12dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="ring1"
        android:id="@+id/ring1"
        android:layout_alignTop="@+id/feet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Carried"
        android:id="@+id/carriedTitle"
        android:layout_below="@+id/feet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carriedEquipment"
        android:layout_below="@+id/carriedTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ring2"
        android:layout_alignEnd="@+id/ring2" />
</RelativeLayout>
